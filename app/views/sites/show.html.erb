<%- model_class = Site -%>
<div class="page-header">
  <h1><%=t '.title', :default => Site %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @site.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:site_id) %></dt>
      <dd><pre class="prettyprint"><%= @site.site_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:state) %></dt>
      <dd><pre class="prettyprint"><%= @site.state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:street) %></dt>
      <dd><pre class="prettyprint"><%= @site.street %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ce_email) %></dt>
      <dd><pre class="prettyprint"><%= @site.ce_email %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sites_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_site_path(@site), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              site_path(@site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

