<%- model_class = Vmax -%>
<div class="page-header">
  <h1><%=t '.title', :default => Vmax %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:serial_number) %></th>
      <th><%= model_class.human_attribute_name(:system_name) %></th>
      <th><%= model_class.human_attribute_name(:enginuity_code) %></th>
      <th><%= model_class.human_attribute_name(:target_code) %></th>
      <th><%= model_class.human_attribute_name(:ship_date) %></th>
      <th><%= model_class.human_attribute_name(:install_date) %></th>
      <th><%= model_class.human_attribute_name(:esrs_enabled) %></th>
      <th><%= model_class.human_attribute_name(:contract_number) %></th>
      <th><%= model_class.human_attribute_name(:contract_expiration) %></th>
      <th><%= model_class.human_attribute_name(:raw_tb) %></th>
      <th><%= model_class.human_attribute_name(:engine_count) %></th>
      <th><%= model_class.human_attribute_name(:openscale) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vmaxes.each do |vmax| %>
      <tr>
        <td><%= vmax.id %></td>
        <td><%= vmax.serial_number %></td>
        <td><%= vmax.system_name %></td>
        <td><%= vmax.enginuity_code %></td>
        <td><%= vmax.target_code %></td>
        <td><%= vmax.ship_date %></td>
        <td><%= vmax.install_date %></td>
        <td><%= vmax.esrs_enabled %></td>
        <td><%= vmax.contract_number %></td>
        <td><%= vmax.contract_expiration %></td>
        <td><%= vmax.raw_tb %></td>
        <td><%= vmax.engine_count %></td>
        <td><%= vmax.openscale %></td>
        <td><%=l vmax.created_at, format: :long %></td>
        <td>
          <%= link_to vmax_path(vmax), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to vmax_path(vmax), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vmax_path,
            :class => 'btn btn-primary' %>
